{
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
        "React": true
    },
    "plugins": [
        "react",
        "import",
        "jsx-a11y",
        "babel"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "comma-dangle": "off",
        "react/no-array-index-key": "off",
        "no-tabs": "off",
        "react/jsx-indent": "off",
        "react/jsx-indent-props": "off",
        "indent": ["error", "tab"],
        "jsx-a11y/label-has-for": [ 2, {
            "components": [ "Label" ],
            "required": {
                "some": [ "nesting", "id" ]
            },
            "allowChildren": false
        }]
    }
}